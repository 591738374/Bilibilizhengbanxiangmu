<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:id="@+id/ll_zhuifan"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >



        <ImageView

            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/fanju"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/guoman"
            android:layout_marginRight="20dp"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shijianbiao"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/iv_shijiabiao"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/shijianbiao"
            android:layout_marginLeft="40dp"

            />

        <TextView
            android:id="@+id/tv_shijianbiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="时间表"
            android:layout_margin="10dp"

            />

        <ImageView
            android:id="@+id/iv_suoyin"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/suoyin"

            />

        <TextView
            android:id="@+id/tv_suoyin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="索引"
            android:layout_margin="10dp"

            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/kongbai"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#DADADA"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <RelativeLayout

        android:id="@+id/rl_denglutupian"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/dengluhoutiandi"

        >


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvtui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
