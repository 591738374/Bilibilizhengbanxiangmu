<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/dengluzhuce"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FB7299"

        >

        <LinearLayout
            android:id="@+id/ll_denglu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:id="@+id/iv_denglu"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/denglu"
                android:layout_marginLeft="15dp"

                />
            <TextView
                android:id="@+id/tv_denglu"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="登录"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="#fffcfd"

                />

            <TextView
                android:id="@+id/tv_wangjimima"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="忘记密码?"
                android:textSize="10sp"
                android:layout_marginLeft="250dp"
                android:textColor="#fffcfd"
                android:gravity="center"

                />
        </LinearLayout>
    </RelativeLayout>

     <LinearLayout
         android:id="@+id/ll_bilibili"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:orientation="horizontal"

         >

         <ImageView
             android:id="@+id/iv_xiaoren"
             android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:background="@drawable/ic_22"
             android:layout_marginTop="20dp"
             />

         <ImageView
             android:id="@+id/iv_bilibili"
             android:layout_width="100dp"
             android:layout_height="60dp"
             android:background="@drawable/dianshibilibili"
             android:layout_margin="30dp"

             />

         <ImageView
             android:id="@+id/iv_xiaoren2"
             android:layout_width="wrap_content"
             android:layout_height="60dp"
             android:background="@drawable/ic_33"
             android:layout_marginTop="20dp"

             />
     </LinearLayout>


      <LinearLayout
          android:id="@+id/ll_lianxiren"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          >

          <ImageView
              android:layout_width="20dp"
              android:layout_height="30dp"
              android:background="@drawable/bangumi_common_editor_recommend"
              android:layout_gravity="center"
              android:layout_marginLeft="20dp"
              />
          <EditText
              android:id="@+id/et_shoujihao"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="你的手机号/邮箱"
              android:textColor="#A4A4A4"
              android:layout_marginLeft="10dp"

              />

      </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_mima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/mima"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/et_mima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请输入密码"
            android:textColor="#A4A4A4"
            android:layout_marginLeft="10dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhucezhuanghao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        >
        <Button

            android:id="@+id/btn_zhucezhanghao"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="注册账号"
            android:background="#EAEAEA"
            android:textColor="#F982A4"
            android:drawable="@drawable/denglu_button_shape"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="登录"
            android:background="#EFC6D2"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />


    </LinearLayout>




</LinearLayout>
